.text{
  float: right;
  font-size: 16px;
  margin-top: 22px;
}

.week{
  display: flex;justify-content: flex-start;align-items: center;
}
.date{
   display: flex;justify-content: flex-start;align-items: center;
   flex-wrap: wrap;
}
.goleft{
  background: gray;
  width: 70rpx;
  height: 50rpx;
  float: left;
  font-size: small;
}
.goright{
  background: gray;
  width: 70rpx;
  height: 50rpx;
  float: right;
  font-size: small;
}

.date-wrap{
  margin: auto;
  font-size: 20px;
}

.selectDate{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  margin: 0 auto;
}

.today{
  background-color: rgb(154, 216, 84);
}

.day{
  margin: auto;
}

.choosed{
  background: rgb(36, 221, 150)
}

